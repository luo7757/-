/* 全局系统样式定义 */
.login-container {
  background-color: #F8F8F8;
  width: 100%;
}
.login-container .banner-bg {
  width: 100%;
  height: 400rpx;
}
.login-container .login-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  padding: 0 146rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #999;
}
.login-container .login-nav .nav-item {
  position: relative;
  margin-bottom: 40rpx;
}
.login-container .login-nav .nav-item.active {
  color: #f25037;
}
.login-container .login-nav .nav-item.active:after {
  content: "";
  position: absolute;
  bottom: -20rpx;
  width: 60rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #f25037;
}
.login-container .footer-select-container {
  width: 640rpx;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: row;
  color: #999;
  font-size: 26rpx;
  text-decoration: underline;
}
 .uni-forms-item__content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: center;
  padding-left: 40rpx;
}
 .uni-forms-item {
  padding-left: 30rpx !important;
  border-bottom: 1px solid #eee;
  height: 120rpx;
  background-color: #fff;
}
 .uni-forms-item__box {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: row;
  height: 100%;
}
 .uni-forms-item__inner {
  padding-bottom: 0rpx !important;
  width: 100% !important;
}
 .label-text ._span {
  font-size: 32rpx;
}
 .uni-easyinput__content-input {
  padding-left: 0;
}
.placeholder {
  color: #999;
}
.login-btn {
  width: 640rpx;
  height: 90rpx;
  border-radius: 10rpx;
  background-color: #f25037;
  color: #FFFFFF;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  flex-direction: row;
  margin-top: 80rpx;
}
/* 使用uni-easyinput 进行bug修复 */
